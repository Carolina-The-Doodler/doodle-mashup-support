{
  "name": "doodle-mashup-support",
  "version": "1.0.0",
  "description": "Support site for Doodle Mashup app with visual regression testing",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:update-snapshots": "playwright test --update-snapshots",
    "serve": "npx http-server . -p 3000"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "http-server": "^14.1.1",
    "typescript": "^5.0.0",
    "pngjs": "^7.0.0",
    "pixelmatch": "^5.3.0",
    "@types/pngjs": "^6.0.4",
    "@types/pixelmatch": "^5.2.6"
  },
  "keywords": [
    "support",
    "doodle-mashup",
    "visual-testing",
    "playwright"
  ],
  "license": "MIT"
}
